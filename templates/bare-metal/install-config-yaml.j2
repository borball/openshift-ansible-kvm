apiVersion: v1
baseDomain: {{ net.domain }}
compute:
- hyperthreading: Enabled
  name: worker
  replicas: {{ spec_worker.num_worker }}
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: {{ spec_master.num_master }}
metadata:
  name: {{ net.subdomain }}
networking:
  clusterNetworks:
  - cidr: {{ net.cluster_cidr }}
    hostPrefix: {{ net.cluster_prefx }}
  networkType: OpenShiftSDN
  serviceNetwork:
  - {{ net.service }}
platform:
  none: baremetal
pullSecret: '{{ key.pullsecret }}'
sshKey: '{{ key.sshkey}}'
